<h1>Products</h1>

<%= search_form_for @q do |f| %>
  <%= f.label :name_cont %>
  <%= f.search_field :name_cont %>

  <%= f.submit %>
  <% end %>

<table border= "1">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Category</th>
      <th>Price</th>
      <th>Brand</th>
      <th>Sellor</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |prod| %>
      <tr>
        <td><%= prod.id %></td>
        <td><%= prod.name %></td>
        <td><%= prod.category %></td>
        <td><%= prod.price %></td>
        <td><%= prod.brand %></td>
        <td><%= prod.sellor %></td>
      </tr>
    <% end %>
    
  </tbody>
</table>
<div class="py-4">
  <%= will_paginate @product %>
</div>
